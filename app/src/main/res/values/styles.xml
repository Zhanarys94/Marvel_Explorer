<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditTextStyle_Marvel" parent="Widget.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance_Roboto.Body2</item>
        <item name="android:background">@drawable/border_background_marvel</item>
    </style>

    <style name="TextAppearance_Marvel.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/marvel_font_family</item>
        <item name="android:fontFamily">@font/marvel_font_family</item>
        <item name="android:textSize">26sp</item>

    </style>

    <style name="TextAppearance_Marvel.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/marvel_font_family</item>
        <item name="android:fontFamily">@font/marvel_font_family</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance_Marvel.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/marvel_font_family</item>
        <item name="android:fontFamily">@font/marvel_font_family</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance_Roboto.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance_Marvel.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/marvel_font_family</item>
        <item name="android:fontFamily">@font/marvel_font_family</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance_Marvel.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/marvel_font_family</item>
        <item name="android:fontFamily">@font/marvel_font_family</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
