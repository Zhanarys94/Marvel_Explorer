<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/favoritesFragmentSearchBarEditText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:gravity="bottom"
        android:hint="@string/hint_searchBar_charactersList"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favoritesFragmentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_vertical"
        android:scrollbars="vertical"
        android:layout_weight="0.87"/>

    <TextView
        android:id="@+id/favoritesFragmentCopyrightTextView"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_weight="0.03"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceCaption"
        android:text="@string/marvel_copyright_text"/>

</LinearLayout>