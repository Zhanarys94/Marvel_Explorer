<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="kz.zhanarys.marvelexplorer.charactersList.CharactersListFragment"
        android:label="Characters list">

        <action
            android:id="@+id/action_charactersFragment_to_favoritesListFragment"
            app:destination="@id/favoritesFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="kz.zhanarys.marvelexplorer.favoritesListPage.FavoritesListFragment"
        android:label="Favorites list">

        <action
            android:id="@+id/action_backToCharactersListFragment"
            app:destination="@id/charactersFragment"
            app:popUpTo="@id/charactersFragment"
            app:popUpToInclusive="true"/>
    </fragment>

</navigation>